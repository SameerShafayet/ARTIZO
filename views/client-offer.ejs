<!DOCTYPE html>

<html lang="en">

    
    <!----======== CSS ======== -->
    <%- include('head.ejs', { title: 'Create Gig' , stylesheet: '/css/client-offer.css' }) %>

<body >
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
      integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
      crossorigin="anonymous"></script>

      
    <%- include('navbar.ejs', { user: user }) %>
    <div class="container">
           
        <div class="dash-content">
            <form id="submit-offer" action="/gig/submit-offer?gigId=<%=gigId%>" method="post" enctype="multipart/form-data">
            <h1 class="Clienttext">CLIENT OFFER</h1>
            <br><br>
            

            <div class="main-skills">
                <label for="wordDescription" class="TextSize">Word Description <span class="required-indicator">*</span></label>
                <textarea name="description" id="fixedTextarea" cols="50" rows="10"></textarea>

                <br>
                <br>

                <label for="numberOfWork" class="TextSize">Estimate the number of work<span class="required-indicator">*</span></label>
                <input name="hours" type="number" id="numberOfWork" placeholder="Enter hour of work" required>

                <br>
                <br>

                <label for="requiredMaterials" class="TextSize">Required Materials</label>
                <input type="file" id="requiredMaterials" name="file1" required>
                
                <br>
                <br>

                <label for="additionalComments" class="TextSize">Additional Comments</label>
                <textarea name="comments" id="fixedTextarea" cols="50" rows="10"></textarea>


                <button form="submit-offer" type="submit" class="ButtonPressed">Submit</button>
            </div>
        </form>
        </div>


    </div>

    <!-- <script src="script.js"></script> -->
    <%- include('footer.ejs') %>
</body>
</html>